<MDLabel>
    color: (234/255, 242/255, 184/255)
WindowManager:
    LogInScreen:
        id: log_in_screen
    SignInScreen:
        id: sign_in_screen
    ChatWindow: #holds chat screen
        id: main_screen
    OprWindow: #holds chat screen & operation screen (display song info. etc.)
        id: operation_screen
    AccountWindow:
        id: account_screen
    HistoryWindow:
        id: history_screen

<LogInScreen>
    name: 'start'

    MDCard:
        size_hint: None, None
        size: 650, 800
        pos_hint: {'center_x': 0.5, 'center_y':0.5}
        elevation: 2
        padding: 25
        spacing: 25
        orientation: 'vertical'
        md_bg_color: (30/255, 215/255, 96/255, 0.8)

        AsyncImage:
            source: 'Resources/Promptify-Green-Round.png'
            keep_ratio: True

        MDTextField:
            id: name
            hint_text: 'Your Name'
            icon_left: 'account'
            size_hint_x: None
            width: 450
            font_size: 40
            pos_hint: {'center_x': 0.5}

        MDTextField:
            id: password
            hint_text: 'Your Password'
            icon_left: 'lock-outline'
            password: True
            size_hint_x: None
            width: 450
            font_size: 40
            pos_hint: {'center_x': 0.5}

        MDTextButton:
            text: "Don't have an account?"
            custom_color: "blue"
            pos_hint: {'center_x': 0.73}
            on_release: app.root.current = "signin"

        MDRoundFlatButton:
            text: 'Start Session'
            text_color: (234/255, 242/255, 184/255)
            line_color: (234/255, 242/255, 184/255)
            line_width: 3
            font_size: 28
            padding: (25, 10)
            pos_hint: {'center_x': 0.5}
            on_release: app.on_load(name.text, password.text)

        Widget:
            size_hint_y: None
            height: 30

<SignInScreen>
    name: 'signin'

    MDCard:
        size_hint: None, None
        size: 650, 800
        pos_hint: {'center_x': 0.5, 'center_y':0.5}
        elevation: 2
        padding: 25
        spacing: 25
        orientation: 'vertical'
        md_bg_color: (30/255, 215/255, 96/255, 0.8)

        MDLabel:
            text: 'Sign Up'
            font_size: 32
            halign: 'center'

        Widget:
            size_hint_y: 0.4

        MDTextField:
            id: name
            hint_text: 'Your Name'
            icon_left: 'account'
            size_hint_x: None
            width: 450
            font_size: 40
            pos_hint: {'center_x': 0.5}

        MDTextField:
            id: email
            hint_text: 'Your Email'
            icon_left: 'email-outline'
            size_hint_x: None
            width: 450
            font_size: 40
            pos_hint: {'center_x': 0.5}

        MDTextField:
            id: password_1
            hint_text: 'Your Password'
            icon_left: 'lock-outline'
            password: True
            size_hint_x: None
            width: 450
            font_size: 40
            pos_hint: {'center_x': 0.5}

        MDTextField:
            id: password_2
            hint_text: 'Confirm Password'
            icon_left: 'lock-outline'
            password: True
            size_hint_x: None
            width: 450
            font_size: 40
            pos_hint: {'center_x': 0.5}

        MDTextButton:
            text: "Already have an account?"
            custom_color: "blue"
            pos_hint: {'center_x': 0.73}
            on_release: app.root.current = "start"

        MDRoundFlatButton:
            text: 'Create Account'
            text_color: (234/255, 242/255, 184/255)
            line_color: (234/255, 242/255, 184/255)
            line_width: 3
            font_size: 28
            padding: (25, 10)
            pos_hint: {'center_x': 0.5}
            on_release: app.account_creation(name.text, email.text, password_1.text, password_2.text)

        Widget:
            size_hint_y: None
            height: 30

<ChatWindow>
    name: 'chat'
    MDTopAppBar:
        title: ""
        anchor_title: "left"
        left_action_items: [["account", lambda x: app.move_account(self)], ["history", lambda x: app.move_history()],  ["tune", lambda x: app.callback_3()],["chat-remove-outline", lambda x: app.callback_4()]]
    MDBoxLayout:
#        md_bg_color: (30/255, 215/255, 96/255, 0.8)
        orientation: 'vertical'
        padding: [dp(20), dp(50), dp(20), dp(0)]
#        MDFloatingActionButtonSpeedDial:
#            icon: "cog-outline"
#            data: app.data
#            root_button_anim: True
#            size_hint: (None, None)
#            opacity: 0.8

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: (0.5, 1) #set the size
            pos_hint: {'center_x': 0.5} #position to center

            #chat screen
            MDBoxLayout:
                orientation: 'vertical'
                size_hint: (0.5, 1) #set the size
                padding: [dp(50), dp(0), dp(50), 0]



                MDLabel:
                    size_hint: (1, None)
                    text: 'Promptify'
                    font_size: 35
                    halign: 'center'

#                MDTopAppBar:
#                    elevation: 0
#                    title: "MDTopAppBar"
#                    anchor_title: "left"
#                    right_action_items: [["dots-vertical", lambda x: app.callback()]]
#                    md_bg_color: (30/255, 215/255, 96/255, 0.8)

                MDScrollView:
                    do_scroll_y: True
                    size_hint: (1, 1)
                    padding: (0, 0, 0, '50dp')


                    MDList:
                        id: chatlist
                        padding: ('5dp', '5dp', '5dp', '5dp')
                        spacing: '5dp'
#chat screen

                MDBoxLayout:
                    size_hint: (1, None)
                    spacing: '200dp'
                    padding: ('275dp', '0dp', '0dp', '50dp')
                    orientation: 'horizontal'
                    MDFloatingActionButton:
                        id: mic_1
                        icon: "microphone"
                        md_bg_color: app.theme_cls.accent_color
                        elevation: 2
                        on_release: app.mute_microphone()
                    MDFloatingActionButton:
                        icon: "arrow-collapse-right"
                        md_bg_color: app.theme_cls.primary_color
                        elevation: 2
                        on_release: app.on_transition()


<OprWindow>
    name: 'operation'
    MDTopAppBar:
        title: ""
        anchor_title: "left"
        left_action_items: [["account", lambda x: app.move_account(self)], ["history", lambda x: app.move_history()],  ["tune", lambda x: app.callback_3()],["chat-remove-outline", lambda x: app.callback_4()]]
    MDBoxLayout:
#        md_bg_color: (30/255, 215/255, 96/255, 0.8)
        orientation: 'vertical'
        padding: [dp(20), dp(50), dp(20), dp(0)]
#        MDFloatingActionButtonSpeedDial:
#            icon: "cog-outline"
#            data: app.data
#            root_button_anim: True
#            size_hint: (None, None)
#            opacity: 0.8
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: (0.8, 1) #set the size
            pos_hint: {'center_x': 0.5} #position to center

            #chat screen
            MDBoxLayout:
                orientation: 'vertical'
                size_hint: (0.5, 1) #set the size
                padding: [dp(50), dp(0), dp(50), dp(0)]

                MDLabel:
                    size_hint: (1, None)
                    text: 'Promptify'
                    font_size: 35
                    halign: 'center'

                MDScrollView:
                    do_scroll_y: True
                    size_hint: (1, 1)
                    padding: (0, 0, 0, '50dp')

                    MDList:
                        id: chatlist_m
                        padding: ('5dp', '5dp', '5dp', '5dp')
                        spacing: '5dp'

                MDBoxLayout:
                    size_hint: (1, None)
                    orientation: 'horizontal'
                    spacing: '200dp'
                    padding: ('170dp', '0dp', '0dp', '50dp')
                    MDFloatingActionButton:
                        icon: "microphone"
                        md_bg_color: app.theme_cls.accent_color
                        elevation: 2
                        on_release: app.mute_microphone()
                    MDFloatingActionButton:
                        icon: "arrow-collapse-right"
                        md_bg_color: app.theme_cls.primary_color
                        elevation: 2
                        on_release: app.on_transition()



            #operation screen
            MDBoxLayout:
                orientation: 'vertical'
                size_hint: (0.5, 1) #set the size
                padding: [dp(50), dp(0), dp(50), dp(50)]

            #For Spotify
                #TODO: ImageList then card view?`
                MDCard:

                    elevation: 2
                    padding: 25
                    spacing: 25
                    orientation: 'vertical'


                    MDLabel:
                        id: api_name
                        color: 'white'
                        text: 'Spotify'
                        halign: 'center'
                        size_hint: (1, None)

                    #Cover Img
                    AsyncImage:
                        id: related_image
                        source: 'https://images.unsplash.com/photo-1493225457124-a3eb161ffa5f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80'
                        keep_ratio: True
                        opacity: 0.3

                    #TODO: Do styling for song info.
                    #TODO: add an icon??

                    MDLabel:
                        id: primary_description
                        text: 'Song Title'
                        color: 'white'
                        font_size: 20
                        size_hint: (1, None)
                        halign: 'center'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}


                    MDLabel:
                        id: secondary_description
                        color: 'white'
                        text: 'Artist Name'
                        font_size: 20
                        size_hint: (1, None)
                        halign: 'center'
                        pos_hint: {'center_x': 0.5}
                        color: 'white'

